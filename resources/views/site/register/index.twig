{% extends 'site/templates/app.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-header">
                        Kayıt Ol
                    </div>
                    <div class="card-body">
                        <form action="{{ current_path() }}" method="post" autocomplete="off" class="needs-validation" novalidate>
                            <div class="form-group">
                                <label for="name">Adınız Soyadınız</label>
                                <input type="text" name="name" id="name" class="form-control{{ errors.name ? ' is-invalid':'' }}" value="{{ old.name }}" minlength="5" maxlength="255" required>
                                <div class="invalid-feedback">{{ errors.mail ? errors.mail | first:'Adınızı soyadınızı giriniz.' }}</div>
                            </div>
                            <div class="form-group">
                                <label for="mail">E-posta Adresiniz</label>
                                <input type="email" name="mail" id="mail" class="form-control{{ errors.mail ? ' is-invalid':'' }}" placeholder="siz@alanadi.com" value="{{ old.mail }}" minlength="5" maxlength="320" required>
                                <div class="invalid-feedback">{{ errors.mail ? errors.mail | first:'E-posta adresi giriniz.' }}</div>
                            </div>
                            <div class="form-group">
                                <label for="password">Şifreniz</label>
                                <input type="password" name="password" id="password" class="form-control{{ errors.password ? ' is-invalid':'' }}" minlength="1" required>
                                <div class="invalid-feedback">{{ errors.password ? errors.password | first:'Şifre giriniz.' }}</div>
                            </div>
                            <div class="form-group">
                                <label for="password_confirm">Şifre Tekrar</label>
                                <input type="password" name="password_confirm" id="password_confirm" class="form-control{{ errors.password_confirm ? ' is-invalid':'' }}" minlength="1" required>
                                <div class="invalid-feedback">{{ errors.password_confirm ? errors.password_confirm | first:'Şifrenizi tekrar giriniz.' }}</div>
                            </div>

                            <button type="submit" class="btn btn-primary">Kayıt Ol</button>

                            {{ csrf.field | raw }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block inlineStyles %}
    <link rel="stylesheet" href="{{ base_url() }}/assets/css/site/register/index.css">
{% endblock %}

{% block inlineScripts %}
    <script type="text/javascript" src="{{ base_url() }}/assets/js/site/register/index.js"></script>
{% endblock %}