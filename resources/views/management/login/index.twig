{% extends 'management/templates/app.twig' %}

{% block content %}
    <div class="container d-flex h-100">
        <div class="row align-self-center w-100">
            <div class="col-12 mb-3 text-center">
                <h1>{{ getColumn('App\\Models\\TblSetupSystem', null, 1, 'title') }}</h1>
            </div>
            <div class="col-6 mx-auto">
                <div class="card">
                    <div class="card-header">
                        Giriş Yap
                    </div>
                    <div class="card-body">
                        <form action="{{ current_path() }}" method="post" autocomplete="off" class="needs-validation" novalidate>
                            <div class="form-group">
                                <label for="mail">E-posta Adresiniz</label>
                                <input type="email" name="mail" id="mail" class="form-control{{ errors.mail ? ' is-invalid':'' }}" placeholder="siz@alanadi.com" value="{{ old.mail }}" minlength="5" maxlength="320" required>
                                <div class="invalid-feedback">{{ errors.mail ? errors.mail | first:'E-posta adresi giriniz.' }}</div>
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" name="password" id="password" class="form-control{{ errors.password ? ' is-invalid':'' }}" minlength="1" required>
                                <div class="invalid-feedback">{{ errors.password ? errors.password | first:'Şifre giriniz.' }}</div>
                            </div>

                            <div class="form-group">
                                <div class="g-recaptcha" data-sitekey="6LeA5mQUAAAAAOlUL4-ZpAOlL7wa8hXEZzkts50W"></div>
                            </div>

                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>

                            {{ csrf.field | raw }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block inlineStyles %}
    <link rel="stylesheet" href="{{ base_url() }}/assets/css/management/login/index.css">
{% endblock %}

{% block inlineScripts %}
    <script type="text/javascript" src="{{ base_url() }}/assets/js/management/login/index.js"></script>
    <script src='https://www.google.com/recaptcha/api.js'></script>
{% endblock %}