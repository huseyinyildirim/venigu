{% extends 'management/templates/app.twig' %}

{% block content %}
    <div class="container-fluid mt-3">
        <!-- Header -->
        <p class="lead"><i class="fas fa-user-secret"></i> Yönetici Düzenle</p>
        <!-- Header -->
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path_for('management') }}">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a href="#">Ayarlar</a></li>
                <li class="breadcrumb-item"><a href="{{ path_for('management-admin') }}">Yöneticiler</a></li>
                <li class="breadcrumb-item active" aria-current="page">Yönetici Düzenle</li>
            </ol>
        </nav>
        <!-- Breadcrumb -->
        <div class="my-3 p-3 bg-white rounded shadow-sm">
            <!-- New -->
            <form id="form-new" action="{{ current_path() }}" method="post" autocomplete="off" class="needs-validation" novalidate>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="name">Ad Soyad</label>
                        <input type="text" class="form-control{{ errors.name ? ' is-invalid':'' }}" id="name" name="name" value="{{ table.name }}" minlength="6" maxlength="255" required>
                        <div class="invalid-feedback">{{ errors.name ? errors.name | first:'Ad Soyad giriniz.' }}</div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="mail">E-posta Adresi</label>
                        <input type="email" class="form-control{{ errors.mail ? ' is-invalid':'' }}" id="mail" name="mail" value="{{ table.mail }}" minlength="5" maxlength="320" required>
                        <div class="invalid-feedback">{{ errors.mail ? errors.mail | first:'E-posta adresi giriniz.' }}</div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="password">Şifre</label>
                        <input type="password" class="form-control{{ errors.password ? ' is-invalid':'' }}" id="password" name="password" disabled>
                        <small id="passwordHelpBlock" class="form-text text-muted">
                            Şifreyi değiştirmek istemiyorsanız boş bırakın.
                        </small>
                        <div class="invalid-feedback">{{ errors.password ? errors.password | first:'Şifre giriniz.' }}</div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="password_confirm">Şifre Tekrar</label>
                        <input type="password" class="form-control{{ errors.password_confirm ? ' is-invalid':'' }}" id="password_confirm" name="password_confirm" disabled>
                        <div class="invalid-feedback">{{ errors.password_confirm ? errors.password_confirm | first:'Şifre tekrar giriniz.' }}</div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="icheck-primary">
                        <input class="" type="checkbox" id="password_change" name="password_change">
                        <label for="password_change">
                            Şifremi değiştirmek istiyorum.
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <span class="switch">
                        <input type="checkbox" class="switch" id="switch-normal" name="is_active" {{ table.is_active=='1' ? ' checked' : null }}>
                        <label for="switch-normal">Aktif mi?</label>
                    </span>
                </div>
                <button type="submit" class="btn btn-primary"><i class="far fa-save"></i> Düzenle</button> <button type="reset" class="btn btn-secondary reset"><i class="fas fa-eraser"></i> Formu Temizle</button>
                {{ csrf.field | raw }}
            </form>
            <!-- New -->
        </div>
    </div>
{% endblock %}

{% block inlineStyles %}
    <link rel="stylesheet" href="{{ base_url() }}/assets/library/bs4-switch.min.css">
    <link rel="stylesheet" href="{{ base_url() }}/assets/library/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="{{ base_url() }}/assets/css/management/admin/edit.css">
{% endblock %}

{% block inlineScripts %}
    <script type="text/javascript" src="{{ base_url() }}/assets/js/management/admin/edit.js"></script>
{% endblock %}